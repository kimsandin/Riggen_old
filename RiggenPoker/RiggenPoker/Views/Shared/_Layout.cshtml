<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.favicon - Riggen</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="row">
            <div id="wrapper">

                <!-- Sidebar -->
                <div id="sidebar">
                    <ul class="sidebar-nav">
                        <li class="sidebar-brand">
                        </li>
                        @Html.Partial("_LoginPartial")

                        <li>
                            <a href="/Upload/Index">Bilder</a>
                        </li>
                        <li>
                            <a href="#">Nyheter</a>
                        </li>
                        <li>
                            <a href="#">Resultat</a>
                        </li>
                        <li>
                            <a href="#">Om</a>
                        </li>
                        <li>
                            <a href="#">Kontakt</a>
                        </li>
                        <li>
                            @Html.ActionLink("Admin", "Index", "Account")
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!--Sökfunktion-->
    <input type="search" id="searchbar" name="search" placeholder="Sök...">

        <div class="container body-content">
            @RenderBody()
            <hr />
            <footer>
                <p id="copy">&copy; @DateTime.Now.Year - Riggen</p>
            </footer>
        </div>
        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
</body>
</html>
